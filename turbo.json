{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "cdk:deploy:dev": {
      "dependsOn": ["node-server#build"],
      "cache": false
    },
    "cdk:deploy:prod": {
      "dependsOn": ["node-server#build"],
      "cache": false
    }
  }
}
