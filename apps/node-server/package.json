{
  "name": "node-server",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "// -- üöÄ Development": "--",
    "dev": "dotenvx run -f .env.dev -- concurrently 'vite build --mode dev --clearScreen false --watch' 'node --watch dist/index.cjs'",
    "preview": "dotenvx run -f .env.production -- node --watch dist/index.cjs",
    "// -- üõ†Ô∏è Build & Clean": "--",
    "build": "tsc && dotenvx run -f .env.production -- vite build --mode production && npm run copy-cdk-outputs",
    "copy-cdk-outputs": "cross-env ENV=production tsx scripts/copy-cdk-outputs.ts",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "// -- üß™ Testing": "--",
    "test": "echo \"TODO: Implement vitest\" && exit 0",
    "// -- üßπ Linting & Formatting": "--",
    "lint": "eslint src --cache",
    "lint:fix": "eslint src --fix --cache",
    "lint:no-cache": "eslint src",
    "// -- ‚úÖ Verification & CI": "--",
    "// -- üîß Miscellaneous": "--",
    "encrypt-envs": "dotenvx encrypt -f .env.dev .env.production",
    "decrypt-envs": "dotenvx decrypt -f .env.dev .env.production&& echo 'WARNING: DO NOT COMMIT decrypted .env files to the repository!'"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.864.0",
    "@aws-sdk/client-dynamodb": "^3.868.0",
    "@cdk/backend-server-cdk": "*",
    "@configs/eslint-config": "*",
    "@configs/ts-config": "*",
    "@configs/vite-config": "*",
    "@dotenvx/dotenvx": "^1.48.4",
    "@packages/schemas": "*",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "effect": "^3.17.7",
    "eslint": "^9.33.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0",
    "vite": "^7.1.2",
    "zod": "^4.0.17"
  }
}
