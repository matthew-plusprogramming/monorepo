{
  "name": "monorepo",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "packageManager": "npm@11.6.2",
  "type": "module",
  "devDependencies": {
    "globby": "^16.0.0",
    "picomatch": "^4.0.3",
    "prettier": "^3.7.4",
    "ts-morph": "^27.0.2",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3"
  },
  "workspaces": [
    "packages/**",
    "apps/**",
    "cdk/**"
  ],
  "scripts": {
    "// -- ðŸš€ Turborepo": "--",
    "build": "turbo run build",
    "build:no-cache": "turbo run build --force",
    "clean": "node scripts/clean.mjs",
    "sequence": "node scripts/run-sequence.mjs",
    "cache:clear": "rm -rf .turbo",
    "prelint": "npm run format:markdown",
    "lint": "turbo run lint",
    "prelint:fix": "npm run format:markdown",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "// -- ðŸ¤– Agent Scripts": "--",
    "format:markdown": "prettier --write \"agents/**/*.md\"",
    "test:scripts": "node --test \"scripts/utils/__tests__/*.mjs\"",
    "memory:validate": "node agents/scripts/validate-memory-bank.mjs",
    "memory:drift": "node agents/scripts/check-memory-drift.mjs",
    "phase:check": "npm run lint:fix && node agents/scripts/check-code-quality.mjs && npm run build && npm run test",
    "agent:finalize": "npm run memory:validate && npm run phase:check && npm run build:no-cache",
    "eject:analytics": "node scripts/eject-aspect.mjs analytics",
    "eject:users": "node scripts/eject-aspect.mjs users"
  }
}
