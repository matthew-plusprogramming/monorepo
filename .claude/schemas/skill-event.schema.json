{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "skill-event.schema.json",
  "title": "SkillEvent",
  "description": "Lifecycle event emitted by a skill",
  "type": "object",
  "required": ["event_type", "skill", "timestamp"],
  "properties": {
    "event_type": {
      "type": "string",
      "description": "Event name (e.g., spec.created, test.passed, implementation.completed)"
    },
    "skill": {
      "type": "string",
      "description": "Skill that emitted the event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "spec_group_id": {
      "type": "string",
      "description": "Associated spec group if applicable"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific data",
      "additionalProperties": true
    }
  }
}
